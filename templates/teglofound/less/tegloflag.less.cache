//General setting*******************************
body { 
	background-color: white; background: url(../images/bkg_body.gif) repeat;
}
a {
	color: @tpl_teglofound_main_config_main_link_color;
}
a:hover, a:focus {
	color: @tpl_teglofound_main_config_main_hover_active_link_color; 
}
  
.row {
    max-width: 72.5em;
}
.panel {
    background: none repeat scroll 0 0 #FAFAFA;
    border-color: #D9D9D9;
    border-style: solid;
    border-width: 1px;
    margin-bottom: 1.25em;
    padding: 1.25em 1.65em;
}
.max-heigt-panel {
	min-height: 1150px;
}
.down-panel {
    background: transparent;
    margin-bottom: 1.25em;
    padding: 1.25em;
    border-left: 1px solid rgba(255, 255, 255, 0.6);
}
.main_row {
    margin-top: 115px;
}
.lower_menu {
	background: none repeat scroll 0 0 @tpl_teglofound_main_config_lowermenu_color;
	border-top-color: @tpl_teglofound_main_config_lowermenu_border_color;
	border-top-style: solid;
	border-top-width: 2px;
	padding: 20px 15px;
	color: #aaaaaa;
	border-left: 1px solid rgba(255, 255, 255, 0.2);
}
.footer_row {
	background: none repeat scroll 0 0 #FAFAFA;
	border-top-color: #D9D9D9;
	border-top-style: solid;
	border-top-width: 2px;
	padding: 20px 15px;
	color: #aaaaaa;
	height: 150px;
}
.footertxt {
	font-size: 13px;
}
.clear {
	clear: both;
}
.divider-view {
	height: 25px;
}
.PJ-filtermenu {
  width: 200px;
  float: left;
}
fieldset legend {
    background: transparent;
}
button, .button,
button.secondary, .button.secondary {
    background-color: @tpl_teglofound_main_config_button_color;
    border-color: @tpl_teglofound_main_config_border_button_color;
    color: #FFFFFF;
}
button:hover, 
button:focus, 
.button:hover, 
.button:focus,
button.secondary:hover, 
button.secondary:focus, 
.button.secondary:hover, 
.button.secondary:focus  {
	background-color: @tpl_teglofound_main_config_button_hover_active_color; 
}

//END*******************************************

//Messages**************************************
.alert-box {
  background-color: @tpl_teglofound_main_config_main_alert_box_color;
  border-color: @tpl_teglofound_main_config_main_alert_box_border_color;
  color: white; 
}
.alert-box.success {
    background-color: #A5B994;
    border-color: #D6E9C6;
    color: #FFFFFF;
}
.label {
  background-color: @tpl_teglofound_main_config_main_label_color;
}
ul.pagination li.current a {
	background: @tpl_teglofound_main_config_pagination_color;
	color: @tpl_teglofound_main_config_pagination_font_color;
}
 ul.pagination li.current a:hover, 
 ul.pagination li.current a:focus {
background: @tpl_teglofound_main_config_pagination_hover_active_color; 
}
//END*******************************************
//Top Bar***************************************
.row-nav-bar {
    margin: 0 auto;
    padding: 0;
    width: 100%;
}
.columns-nav-bar {
    padding: 0;
}
//Change original settings
.top-bar,
.top-bar.expanded .title-area {   
    background-color: @tpl_teglofound_head_config_main_lower_color;
    background-image: -webkit-gradient(linear, left top, left bottom, from(@tpl_teglofound_head_config_main_upper_color), to(@tpl_teglofound_head_config_main_lower_color));
    background-image: -webkit-linear-gradient(top, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    background-image:    -moz-linear-gradient(top, @tpl_teglofound_head_config_main_upper_color@tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    background-image:      -o-linear-gradient(top, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    background-image:         linear-gradient(to bottom, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    margin-bottom: 0;
}
.top-bar-section ul {
    background-color:  transparent;
    margin-left: 10px;
}
.top-bar-section li {
	box-shadow:8px 0px 6px -1px #777777;
	margin-left: 15px;
}
.top-bar-section li a:not(.button) {
    background-color: @tpl_teglofound_head_config_main_lower_color;
    background-image: -webkit-gradient(linear, left top, left bottom, from(@tpl_teglofound_head_config_main_upper_color), to(@tpl_teglofound_head_config_main_lower_color));
    background-image: -webkit-linear-gradient(top, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    background-image:    -moz-linear-gradient(top, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    background-image:      -o-linear-gradient(top, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    background-image:         linear-gradient(to bottom, @tpl_teglofound_head_config_main_upper_color, @tpl_teglofound_head_config_main_lower_color);
    border-right: 1px solid rgba(255, 255, 255, 0.4);
    border-left: 1px solid rgba(255, 255, 255, 0.4);
}
.top-bar-section ul li > a {
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}
.top-bar-section ul li > a:hover {
    background: none repeat scroll 0 0 @tpl_teglofound_head_config_main_hoveractive_color;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    color: @tpl_teglofound_head_config_main_font_hoveractive_color;
}
.top-bar-section ul li.active > a {
    background: none repeat scroll 0 0 @tpl_teglofound_head_config_main_hoveractive_color;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    color: @tpl_teglofound_head_config_main_font_hoveractive_color;
}
.top-bar ul.title-area li.name {
	border-right: 1px solid rgba(255, 255, 255, 0.4);
	box-shadow:8px 0px 8px -1px #777777;
}
.top-bar-section ul.right li.has-dropdown ul.dropdown {
	background-color: #cccccc;
	padding: 15px 10px;
	border-color: @tpl_teglofound_head_config_main_lower_color;
	border-style: solid;
	border-width: 2px;
	box-shadow:8px 8px 8px -1px #777777;
}  
.top-bar-section ul li > a,
.top-bar-section .dropdown li a {
	color: @tpl_teglofound_head_config_main_font_color;
}
//End********************************************

//Sub Bar***************************************
.panel-sub-bar {
    margin: 0;
    margin-bottom: 0.25em;
    padding: 0.25em;
}
.top-sub-bar {
    background-color: @tpl_teglofound_head_config_sub_bar_color;
    border-bottom: 2px solid @tpl_teglofound_head_config_sub_bar_border_color;
    color: @tpl_teglofound_head_config_sub_bar_font_color;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.5) inset;
    transition: background-color 300ms ease-out 0s;
    height: 40px;
    box-shadow: 0 2px 2px #aaaaaa;
}
.breadcrumbs {
    height: 32px;
    background-color: @tpl_teglofound_head_config_sub_bar_breadcrumbs_color;
    border: 1px solid @tpl_teglofound_head_config_sub_bar_border_color;
}
.breadcrumbs > *:before {
    color: #ffffff;
    margin: 0 0.8em;
    font-weight: bold;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}
.breadcrumbs > * a, .breadcrumbs > * span {
    color: #fefefe;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}
.breadcrumbs > .current a {
    color: #f2f2f2;
    font-weight: bold;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
}
*, *:before, *:after {
    -moz-box-sizing: border-box;
}
*, *:before, *:after {
    -moz-box-sizing: border-box;
}
.breadcrumbs > * {
    float: left;
    font-size: 0.6875em;
    margin: 0;
    text-transform: uppercase;
}
input[name="searchword"], input[name="filter_search"]  {
    -moz-box-sizing: border-box;
    background-color: #FFFFFF;
    border: 1px solid #CCCCCC;
    box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3) inset;
    color: rgba(0, 0, 0, 0.75);
    display: inline;
    font-family: inherit;
    font-size: 0.875em;
    height: 2.2125em;
    margin: 0 0 1em;
    padding: 0.5em;
    transition: box-shadow 0.45s ease 0s, border-color 0.45s ease-in-out 0s;
    width: @mod_search__imput_searchword_width;
}
//End********************************************

//Tools settings*********************************
/* Tooltips */
.has-tip {
  border-bottom: dotted 1px #cccccc;
  cursor: help;
  font-weight: bold;
  color: #333333; }
  .has-tip:hover, .has-tip:focus {
    border-bottom: dotted 1px #4676a6;
    color: #86a9cc; }
  .has-tip.tip-left, .has-tip.tip-right {
    float: none !important; }

.tooltip {
  font-weight: normal;
  font-size: 0.9375em;
  padding: 0.5em;
  left: 0;
  width: 260px;
  color: white;
  background: gray;
}
//END********************************************

